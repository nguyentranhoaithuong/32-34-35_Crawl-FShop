from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.common.exceptions import NoSuchElementException
import os

driver = webdriver.Chrome()
all_article_links = set()

driver.get(f'https://fptshop.com.vn/may-tinh-xach-tay?sort=ban-chay-nhat&trang=15')
article_links = driver.find_elements(By.CSS_SELECTOR, 'div.cdt-product__info')
for link in article_links:
    try:
        links = link.find_elements(By.TAG_NAME, 'a')
        for a in links:
            href = a.get_attribute('href')
            if "https://fptshop.com.vn/so-sanh-san-pham?" not in href:
                all_article_links.add(href)
    except NoSuchElementException:
        pass

filename = os.path.join("D:\KPW\BTL", "Link.txt")
with open(filename, 'w', encoding='utf-8') as file:
    for link in all_article_links:
        file.write(link + '\n')
